<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo_top"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/no_wander_logo_center" />

    <RelativeLayout
        android:id="@+id/passcode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/logo_bottom"
        android:layout_below="@+id/logo_top"
        android:background="@android:color/holo_blue_light">


        <TextView
            android:id="@+id/passcode_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Passcode"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"/>



        <RelativeLayout
            android:id="@+id/row_1"
            android:layout_below="@+id/passcode_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/number_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/number_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/number_1"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/number_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/number_2"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/number_a"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/number_3"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="A"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/number_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/number_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/number_4"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/number_6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/number_5"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/number_b"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/number_6"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="B"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/row_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/number_7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/number_8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/number_7"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="8"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/number_9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/number_8"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="9"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/c"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/number_9"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="C"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/number_0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@id/number_8"
                android:layout_below="@+id/number_8"
                android:layout_marginTop="15dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/d"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@id/c"
                android:layout_below="@+id/c"
                android:layout_marginTop="15dp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:text="D"
                android:textColor="@android:color/white"
                android:textSize="20sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:text="BLEID"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="30dp"
                android:text="Delete"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/logo_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/logo_pointrf"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/pintrf_logo" />

        <ImageView
            android:id="@+id/logo_t"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/no_wander_logo" />
    </RelativeLayout>


</RelativeLayout>